<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6cdc9"
    android:orientation="vertical"
    tools:context="com.example.dude.projectworkz1.GroupHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="Between"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="You"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="#ed0b17" />

        <TextView
            android:id="@+id/groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="and :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/textfrndNameheading"
            android:layout_width="212dp"
            android:layout_height="37dp"
            android:text="Dummy"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#ed0b17" />
    </LinearLayout>

    <EditText
        android:id="@+id/grpdescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="text|textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="44dp"
            android:src="@drawable/rupeeimg" />

        <EditText
            android:id="@+id/groupamount"
            android:layout_width="193dp"
            android:layout_height="69dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Total"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/buttonequalsplit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity=""
            android:background="#d6cdc9"
            android:gravity="center"
            android:onClick="equalSplit"
            android:text="Paid by You and Split Equally" />

        <Button
            android:id="@+id/buttoncustomsplit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity=""
            android:background="#d6cdc9"
            android:gravity="center"
            android:onClick="customSplit"
            android:paddingTop="2dp"
            android:text="cutom split" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#Ffffff">

        <ListView
            android:id="@+id/listViewgroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</LinearLayout>


